appname: "Play"
layout: "main"
charset: "UTF-8"
template: "simple"

session: "MongoDB"
mongodb_session_db: "play"
mongodb_session_coll: "sessions"

serializer: JSON

# this config is generated, really
plugins:
  "Auth::Twitter":
    consumer_key:     "<%= @twitter['consumer_key'] %>"
    consumer_secret:  "<%= @twitter['consumer_secret'] %>"
    callback_url:     "http://<%= @hostport %>/auth/twitter/callback"
    callback_success: "/auth/twitter"
    callback_fail:    "/fail"
