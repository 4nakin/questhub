appname: "Play"
layout: "main"
charset: "UTF-8"
template: "simple"

session: "MongoDB"
mongodb_session_db: "play"
mongodb_session_coll: "sessions"

serializer: JSON

# this config is generated
plugins:
  "Auth::Twitter":
    consumer_key:     "<%= @consumer_key %>"
    consumer_secret:  "<%= @consumer_secret %>"
    callback_url:     "<%= @callback_url %>"
    callback_success: "/auth/twitter"
    callback_fail:    "/fail"
